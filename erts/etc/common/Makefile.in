INSTALL_PROGS =              \
	$(INET_GETHOST)      \
	$(BINDIR)/heart.exe   $(BINDIR)/erlsrv.exe   \
	$(BINDIR)/erl.exe $(BINDIR)/werl.exe \
	$(BINDIR)/$(ERLEXEC) \
	$(INSTALL_EMBEDDED_PROGS)

ENTRY_SRC=$(WINETC)/port_entry.c
ENTRY_OBJ=$(OBJDIR)/port_entry.o
ifeq ($(USING_VC), yes)
