else
YCF_DEBUG_FLAG =
endif
MAPS_YCF_OUTPUT=$(TTF_DIR)/erl_map.ycf.h
UTILS_YCF_OUTPUT=$(TTF_DIR)/utils.ycf.h
DB_INSERT_LIST_OUTPUT=$(TTF_DIR)/erl_db_insert_list.ycf.h

DB_INSERT_LIST_YCF_FLAGS=-yield \
		$(YCF_DEBUG_FLAG) \
