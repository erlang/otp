endif
endif

$(TARGET)/erl_bif_table.c \
$(TARGET)/erl_bif_table.h \
$(TARGET)/erl_bif_wrap.c \
$(TARGET)/erl_bif_list.h \
$(TARGET)/erl_atom_table.c \
$(TARGET)/erl_atom_table.h \
$(TARGET)/erl_pbifs.c \
	: $(TARGET)/TABLES-GENERATED
